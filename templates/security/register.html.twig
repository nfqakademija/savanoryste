{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(registerForm, {'action': path('Register', {'type' : app.request.attributes.get('_route_params')['type']}), 'method': 'POST'}) }}
        {{ form_widget(registerForm) }}

        <button class="btn btn-lg btn-primary" type="submit" id="user_Submit">Pateikti</button>
    {{ form_end(registerForm) }}

{% endblock %}