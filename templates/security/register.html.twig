{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(registerForm, {'action': path('Register'), 'method': 'POST'}) }}
        {{ form_widget(registerForm) }}
        <div>
            <label for="user_password_repeat" class="required">Pakartokite slaptažodį</label>
            <input type="password" id="user_password" name="password_repeat"
                   required="required" class="form-control"
                   oninvalid="setCustomValidity('Pakartokite slaptažodį')" oninput="setCustomValidity('')" />
        </div>

        <div id="checkboxGroup" class="checkbox mb-3">
            <label for="role"> Pasirinkite role:<br>
                <input type="checkbox" name="ROLE_VOLUNTEER"> Savanoris
                <input type="checkbox" name="ROLE_ORGANISATION"> Organizacija
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit" id="user_Submit">Pateikti</button>
    {{ form_end(registerForm) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="{{ asset('checkBox.js') }}" type="text/javascript"></script>
{% endblock %}